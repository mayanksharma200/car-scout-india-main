# Database Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_32_chars_minimum
JWT_REFRESH_SECRET=your_refresh_secret_key_32_chars_minimum

# Session Configuration
SESSION_TIMEOUT=15m
REFRESH_TIMEOUT=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# IMAGIN.studio API Configuration
IMAGIN_CUSTOMER_KEY=your_imagin_customer_key
IMAGIN_TAILORING_KEY=your_imagin_tailoring_key

# Gmail Configuration for OTP emails (Forgot Password)
# To get Gmail App Password:
# 1. Go to Google Account settings
# 2. Enable 2-Factor Authentication
# 3. Go to Security > 2-Step Verification > App passwords
# 4. Generate a new app password for "Mail"
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# Environment
NODE_ENV=development